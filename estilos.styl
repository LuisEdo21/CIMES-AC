body
  background url("textured_paper.png")
  font-family "Verdana", Arial
  font-size 16px
  text-align center

figcaption a
  color white

header
  font-size 0.85em
  width 100%

#titulo, #logo
  display inline-block
  padding 0 0 1em 0
  vertical-align top

fieldset
  border none

label
  display block

#botondeenvio
  border none
  background #24314E
  color #FFF
  cursor pointer
  margin 1em
  padding 1em
  transition all 0.5s ease

#botondeenvio:hover
  background rgba(220, 220, 220, 0.7)
  color black

#botonera
  background #6F7279

  ul
    list-style none

    li
      display inline-block

      a
        background #24314E
        color #FFF
        display inline-block
        margin 1em -0.5em 1em 0
        padding 0.5em 1em
        text-decoration none
        transition all 0.5s ease

      #inicio
        border-radius 0.7em 0 0 0.7em

      #contacto
        border-radius 0 0.7em 0.7em 0

      a:hover
        background rgba(220, 220, 220, 0.7)
        color black

#botonera_normas ul
  list-style none

  li
    display inline-block
    vertical-align top

.pdf
  background #BF3030
  color white
  display inline-block
  margin 1em -0.2em 1em 0
  padding 1em 1.5em
  text-decoration none
  transition all 0.5s ease

.word
  background #0C5AA6
  color white
  display inline-block
  margin 1em -0.2em 1em 0
  padding 1em 1.5em
  text-decoration none
  transition all 1s ease

.pdf:hover
  background #F53D65
  color black

.word:hover
  background #64AAD0
  color black

ol
  list-style none

  li a
    color black

